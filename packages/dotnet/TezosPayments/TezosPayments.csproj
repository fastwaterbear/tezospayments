<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>TezosPayments</PackageId>
    <Product>TezosPayments</Product>
    <Version>0.1.0</Version>
    <Authors>Fast Water Bear</Authors>
    <Description>Package for payment generation in the Tezos Payments system</Description>
    
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>Tezos;Payments;TezosPayments</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://tezospayments.com</PackageProjectUrl>

    <RepositoryUrl>https://github.com/fastwaterbear/tezospayments.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryBranch>master</RepositoryBranch>
    <RepositoryCommit>$(TEZOS_PAYMENTS_COMMIT_SHA)</RepositoryCommit>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
    <PackageReference Include="Netezos" Version="2.4.6" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
