{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "[typescript]": {
    "editor.tabSize": 2,
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.tabSize": 2
  },
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
  "cSpell.language": "en,ru",
  "cSpell.words": [
    "airgap",
    "antd",
    "bignumber",
    "browserslist",
    "edonet",
    "entrypoint",
    "entrypoints",
    "fastwaterbear",
    "florencenet",
    "granadanet",
    "mutez",
    "promisify",
    "serializable",
    "tezos",
    "tezospayments"
  ]
}
